<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip">

        <ImageView
            android:id="@+id/ivBoundingBox"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@drawable/comments_data_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Kommentare"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCommentLocation" />

        <TextView
            android:id="@+id/tvCommentUser"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="User"
            android:textAlignment="textStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/ivIconCommentUser"
            app:layout_constraintTop_toTopOf="@+id/ivBoundingBox" />

        <TextView
            android:id="@+id/tvCommentRating"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:text="rating"
            android:textAlignment="textEnd"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvCommentLocation"
            android:layout_width="wrap_content"
            android:layout_height="18dp"

            android:text="Location"
            android:textAlignment="textStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBoundingBox"
            app:layout_constraintStart_toEndOf="@+id/ivIconCommentLocation" />

        <TextView
            android:id="@+id/tvCommentDate"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:text="date"
            android:textAlignment="textEnd"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCommentRating" />

        <ImageView
            android:id="@+id/ivIconCommentRating"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            app:layout_constraintEnd_toStartOf="@+id/tvCommentRating"
            app:layout_constraintTop_toTopOf="@+id/ivBoundingBox"
            app:srcCompat="@drawable/icon_rating" />

        <ImageView
            android:id="@+id/ivIconCommentLocation"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBoundingBox"
            app:layout_constraintStart_toStartOf="@+id/ivBoundingBox"
            app:srcCompat="@drawable/icon_location" />

        <ImageView
            android:id="@+id/ivIconCommentUser"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            app:layout_constraintStart_toStartOf="@+id/ivBoundingBox"
            app:layout_constraintTop_toTopOf="@+id/ivBoundingBox"
            app:srcCompat="@drawable/icon_user" />

        <ImageView
            android:id="@+id/ivIconCommentDate"
            android:layout_width="24dp"
            android:layout_height="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBoundingBox"
            app:layout_constraintEnd_toStartOf="@+id/tvCommentDate"
            app:srcCompat="@mipmap/icon_last_time" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>