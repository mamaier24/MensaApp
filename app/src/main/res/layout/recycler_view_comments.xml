<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp">


        <TextView
            android:id="@+id/tvComment_foodProfile"
            android:layout_width="356dp"
            android:layout_height="187dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Kommentare"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tVComment_location" />

        <TextView
            android:id="@+id/tVComment_user"
            android:layout_width="327dp"
            android:layout_height="18dp"
            android:background="#b8424242"
            android:text="User"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tVComment_stars"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:background="#b8424242"
            android:text="stars"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tVComment_user"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tVComment_location"
            android:layout_width="327dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:background="#b8424242"
            android:text="Location"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tVComment_user" />

        <TextView
            android:id="@+id/tVComment_date"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:background="#b8424242"
            android:text="date"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tVComment_location"
            app:layout_constraintTop_toBottomOf="@+id/tVComment_user" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>