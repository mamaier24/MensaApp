<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <TextView
            android:id="@+id/tvBewertung"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ratingBar"
            android:layout_toStartOf="@+id/tvTitel"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="329dp"
            android:layout_height="88dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:padding="5dp"
            android:src="@drawable/ic_restaurant_menu" />

        <TextView
            android:id="@+id/tvTitel"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPreis"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvBewertung"
            android:layout_marginBottom="69dp"
            android:text="TextView"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ivFavorite"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>